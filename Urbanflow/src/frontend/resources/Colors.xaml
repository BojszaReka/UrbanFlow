<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#4CAF50</Color>
    <Color x:Key="PrimaryColorTransparent">#334CAF50</Color>
    <Color x:Key="SecondaryColor">#F1F8E9</Color>
    <Color x:Key="AccentColor">#8BC34A</Color>
    <Color x:Key="BackgroundLightColor">#F8F9FA</Color>
    <Color x:Key="BackgroundDarkColor">#1B271A</Color>
    <Color x:Key="TextLightColor">#1F2937</Color>
    <Color x:Key="TextTransparentLightColor">#331F2937</Color>
    <Color x:Key="TextDarkColor">#F3F4F6</Color>
    <Color x:Key="TransparentGrey">#11000000</Color>
    <Color x:Key="Grey">#6B7280</Color>
    

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryBrushTransparent" Color="{StaticResource PrimaryColorTransparent}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLightColor}"/>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLightColor}"/>
    <SolidColorBrush x:Key="TextDarkBrush" Color="{StaticResource TextDarkColor}"/>
    <SolidColorBrush x:Key="TransparentGreyBrush" Color="{StaticResource TransparentGrey}"/>
    <SolidColorBrush x:Key="GreyBrush" Color="{StaticResource Grey}"/>

</ResourceDictionary>