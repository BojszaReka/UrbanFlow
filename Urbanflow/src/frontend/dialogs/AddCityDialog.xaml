<Window x:Class="Urbanflow.src.frontend.dialogs.AddCityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Urbanflow.src.frontend.dialogs"
        mc:Ignorable="d"
        Title="Város hozzáadása" 
        Height="300"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">

        <TextBlock Text="Város neve:"/>
        <TextBox x:Name="CityNameTextBox" Margin="0,5,0,5"/>

        <TextBlock Text="Leírás:"/>
        <TextBox x:Name="CityDescriptiponTextBox" Margin="0,5,0,15" Height="50"/>

        <StackPanel Orientation="Horizontal">
            <Button Content="Mappa választása"
                Width="120"
                Click="SelectFolder_Click"/>

            <TextBox x:Name="FolderTextBox"
                 Margin="10,0,0,0"
                 IsReadOnly="True"
                 VerticalAlignment="Center"
                 Width="230"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="OK_Click"/>
            <Button Content="Mégse" Width="80" Click="Cancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
