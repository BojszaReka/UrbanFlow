<Window x:Class="Urbanflow.src.frontend.dialogs.EditWorkflowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Urbanflow.src.frontend.dialogs"
        mc:Ignorable="d"
        Title="Munkafolyamat szerkesztése" 
        Height="200" Width="350">
    <StackPanel Margin="10">
        <TextBlock Text="Név:"/>
        <TextBox x:Name="NameBox"/>

        <TextBlock Text="Leírás:" Margin="0,10,0,0"/>
        <TextBox x:Name="DescriptionBox" Height="70" TextWrapping="Wrap" AcceptsReturn="True"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Mégse" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
