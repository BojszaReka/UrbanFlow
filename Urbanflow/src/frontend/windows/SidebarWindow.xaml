<Window x:Class="Urbanflow.src.frontend.windows.SidebarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Urbanflow.src.frontend.windows"
        mc:Ignorable="d"
        Title="UrbanFlow"
        MinWidth="1200"
        MinHeight="700"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/src/frontend/resources/Buttons.xaml"/>
                <ResourceDictionary Source="/src/frontend/resources/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- Main Layout: Sidebar + Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47.883"/>
            <ColumnDefinition Width="192.117"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Bottom toolbar -->

        </Grid.RowDefinitions>

        <!-- ============================= -->
        <!-- SIDEBAR -->
        <!-- ============================= -->
        <Border Background="{StaticResource BackgroundLightBrush}"
            Padding="16"
            Grid.Column="0"
            CornerRadius="0" Grid.ColumnSpan="2">
            <DockPanel LastChildFill="True">
                <!-- Top Section -->
                <StackPanel DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,0,0,20">
                    <!-- Back Button -->
                    <Button Style="{StaticResource TabUnselectedButton}" Click="BackToWelcome_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="←" FontSize="18" Margin="10,0,6,6"/>
                            <TextBlock Text="Vissza" FontSize="14" FontWeight="Medium" Margin="0,3,6,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Navigation Tabs -->
                    <StackPanel Margin="0,20,0,0" >
                        <!-- Active Tab -->
                        <Button x:Name="btn_tabgraph" Style="{StaticResource TabSelectedButton}" Click="openGraphView">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="🕸️" FontSize="16" Margin="6,0,6,0"/>
                                <TextBlock Text="Gráf nézet" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <!-- Other Tabs -->
                        <Button x:Name="btn_tabai" Style="{StaticResource TabUnselectedButton}" Click="openAiView">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="🤖" FontSize="16" Margin="6,0,6,0"/>
                                <TextBlock Text="AI optimalizálás" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btn_tabmap" Style="{StaticResource TabUnselectedButton}" Click="openMapView">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="🗺️" FontSize="16" Margin="6,0,6,0"/>
                                <TextBlock Text="Térkép nézet" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btn_tabnetwork" Style="{StaticResource TabUnselectedButton}" Click="openNetworkView">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="🛣️" FontSize="16" Margin="6,0,6,0"/>
                                <TextBlock Text="Hálózat menedzselése" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Bottom Section -->
                <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Margin="0,20,0,0">
                    <Separator Margin="0,6,0,6" Opacity="0.2"/>

                    <!-- Action Buttons -->
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Style="{StaticResource LinedButton}" Width="95">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="⬆️" FontSize="16" Margin="0,0,6,2"/>
                                <TextBlock Text="Exportálás" FontSize="14" Margin="0,1,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource GreenButton}" Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="💾" FontSize="16" Margin="0,0,6,0"/>
                                <TextBlock Text="Mentés" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Settings -->
                    <Button Style="{StaticResource TabUnselectedButton}" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="⚙️" FontSize="16" Margin="10,0,6,0"/>
                            <TextBlock Text="Beállítások" FontSize="14" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>


        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Column="2" Grid.Row="0" Background="#F8F9FA" Margin="10,10,10,10">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
