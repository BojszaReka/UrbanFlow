<Page x:Class="Urbanflow.src.frontend.pages.WorkflowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Urbanflow.src.frontend.pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      Background="#F8F9FA"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkflowPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/src/frontend/resources/Buttons.xaml"/>
                <ResourceDictionary Source="/src/frontend/resources/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border BorderBrush="#DEE2E6"
            BorderThickness="0,0,0,1"
            Padding="10"
            Background="#F8F9FA"
            Grid.Row="0">
            <DockPanel>
                <TextBlock x:Name="PageTitle"
                       Text="Munkafolyamatok - Veszprém"
                       DockPanel.Dock="Left"
                       FontSize="24"
                       FontWeight="Black"
                       VerticalAlignment="Center"
                       Foreground="#212529"/>

                <Button x:Name="AddNewWorkFlow"
                    Content="Új munkafolyamat"
                    DockPanel.Dock="Right"
                    Style="{StaticResource GreenButton}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Height="36"
                    Width="150"
                    FontSize="14"
                    Click="AddNewWorkFlow_Click"
                    >
                </Button>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1"
            Background="White"
            BorderBrush="#DEE2E6"
            BorderThickness="1"
            CornerRadius="8"
            Padding="0"
            Margin="0,16,0,0">
            <DataGrid x:Name="WorkflowDataGrid"
            AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  IsReadOnly="True"
                  RowHeight="40"
                  FontSize="14"
                  BorderThickness="0"
                  Background="White"
                  HorizontalGridLinesBrush="#E5E7EB"
                  VerticalGridLinesBrush="#E5E7EB"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="0"
                  Foreground="Black">

                <!-- Column Header Style -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F1F3F5"/>
                        <Setter Property="Foreground" Value="#6C757D"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="12,6"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#DEE2E6"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Table Columns -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Név" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Leírás" Binding="{Binding Description}" Width="2*"/>
                    <DataGridTextColumn Header="Létrehozva" Binding="{Binding Created}" Width="1*"/>
                    <DataGridTextColumn Header="Utoljára módosítva" Binding="{Binding Modified}" Width="1*"/>
                    <DataGridTemplateColumn Header="" Width="0.6*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                    <Button Content="✏️" ToolTip="Szerkesztés"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#6C757D"
                                        Cursor="Hand"
                                        Click="EditWorkflow_Click"/>
                                    <Button Content="▶" ToolTip="Futtatás"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#6C757D"
                                        Cursor="Hand"
                                        Click="RunWorkflow_Click"/>
                                    <Button Content="🗑️" ToolTip="Törlés"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#6C757D"
                                        Cursor="Hand"
                                        Click="DeleteWorkflow_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Border>
        <Button x:Name="BackButton"
            Grid.Row="2"
            Style="{StaticResource GreyButton}"
            Content=" Vissza"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="0,6,0,0"
            Height="25"
            Click="BackToWelcome_Click"
    />
    </Grid>
</Page>
