<Page x:Class="Urbanflow.src.frontend.pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Urbanflow.src.frontend.pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Kezdőlap"
      Background="#1A1A1A"
      FontFamily="Manrope"
      MinHeight="500"
      MinWidth="900">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/src/frontend/resources/Buttons.xaml"/>
                <ResourceDictionary Source="/src/frontend/resources/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <!-- Background Image with dark gradient overlay -->
        <Grid.Background>
            <ImageBrush ImageSource="/Urbanflow;component/src/frontend/misc/background_image.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#66000000" Offset="0"/>
                    <GradientStop Color="#99000000" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Main content container -->
        <Grid VerticalAlignment="Center"
      HorizontalAlignment="Center"
      Margin="60">
            <StackPanel Width="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical"
                Margin="0,40">

                <!-- Header -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
                    <Viewbox Width="36" Height="36" Margin="0,0,10,0">
                        <Canvas Width="24" Height="24">
                            <Path Fill="#27AE60"  
                        Data="M18.9 3H5.1C3.94 3 3 3.94 3 5.1V18.9C3 20.06 3.94 21 5.1 21H18.9C20.06 21 21 20.06 21 18.9V5.1C21 3.94 20.06 3 18.9 3ZM11 18H6V13H11V18ZM11 12H6V7H11V12ZM18 18H12V7H18V18Z"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="UrbanFlow"
                       Foreground="White"
                       FontSize="26"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Title -->
                <TextBlock Text="Buszhálózat tervezés és optimalizálás"
                   Foreground="White"
                   FontSize="54"
                   FontWeight="Black"
                   TextWrapping="Wrap"
                   TextAlignment="Left"
                   Margin="0,0,0,40"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- City Selection -->
                    <Border Background="#33FFFFFF"
                CornerRadius="8"
                Padding="8"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                Width="530"
                VerticalAlignment="Center">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Icon -->
                            <TextBlock Text="🚌"
                           FontSize="20"
                           VerticalAlignment="Center"
                           Foreground="#DDDDDD"
                           Margin="8,0,12,0"/>

                            <!-- ComboBox -->
                            <ComboBox 
                          x:Uid="CityComboBox"
                          x:Name="CityComboBox"
                          Grid.Column="1"
                          FontSize="16"
                          FontWeight="Medium"
                          Foreground="white"
                          Background="Transparent"
                          BorderThickness="0"
                          Padding="6,4"
                          HorizontalContentAlignment="Left"
                          VerticalContentAlignment="Center"
                          HorizontalAlignment="Stretch"
                          Margin="0,0,8,0"
                          Cursor="Hand"
                          SelectionChanged="CityComboBox_SelectionChanged">

                                <!-- Hint item (disabled or default) -->
                                <ComboBoxItem x:Name="HintItem" IsEnabled="False" IsSelected="True" IsHitTestVisible="False" Foreground="Gray">Város választása</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Add New City Button -->
                    <Button Style="{StaticResource GreenButton}"
                FontSize="20"
                Width="50"
                Height="30"
                Margin="10,0,10,0"
                Content="+"
                Click="AddCity_Click"/>
                </StackPanel>

                <Button 
                x:Name="ContinueButton"
                x:Uid="ContinueButton"
                Style="{StaticResource GreenButton}"
                Content="Tovább"
                Height="25"
                Margin="10"
                IsEnabled="False"
                Click="ContinueButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
